@startuml
title Activity Diagram - Get Directions

start
:Open App / Show Main Menu;
:User taps Destination;
if (Destination exists?) then (yes)
  :Load route steps;
  :Display steps;
  :Send steps to TTS;
  :Play voice directions;
  if (User action?) then (Repeat)
    :Replay current step;
  elseif (Pause)
    :Pause playback;
  elseif (Stop)
    :Stop playback;
  endif
  :End navigation;
else (no)
  :Show error "Route not found";
endif
stop
@enduml
